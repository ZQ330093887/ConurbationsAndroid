<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_56_dp"
            android:layout_marginStart="@dimen/dimens_16_dp"
            android:layout_marginLeft="@dimen/dimens_16_dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_14_sp"
                tools:text="@string/song" />

            <TextView
                android:id="@+id/subTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_4_dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_read"
                android:textSize="@dimen/dimens_14_sp"
                tools:text="@string/song" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bottomSheetRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>